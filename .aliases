#############################################################
# Shortcut for grepping stuff								#
#############################################################
find_in_files () {
	if [ $# -ne 1 ]
	then
		echo "Whoa buddy, you need to enter a term to search for."
		echo "Example:"
		echo "	ff 'dave'"
	else
		grep --exclude-dir=".git" -lr -i "$1" .
	fi
}

alias ff=find_in_files

